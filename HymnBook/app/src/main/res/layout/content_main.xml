<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainPDFFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.timothy10.silas.hymnbook.view.impl.MainActivity">

    <EditText
        android:id="@+id/HymnSearchBar"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/HymnSearchText"
        android:inputType="number"
        android:selectAllOnFocus="false" />

    <ImageView
        android:id="@+id/pdfImageView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/HymnSearchBar"
        android:src="@android:color/white"
        android:scaleType="fitCenter"
        android:contentDescription="@null" />
</RelativeLayout>
